<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#079FC6" android:id="@+id/topBar"
	android:layout_width="fill_parent" android:layout_height="51dp"
	android:orientation="horizontal" android:layout_alignParentTop="true"
	android:layout_weight="1">
	<ImageButton 
		android:id="@+id/header"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:gravity="left"
		android:background="@drawable/main_logo_s" android:layout_gravity="left"></ImageButton>
	<TextView
		android:id="@+id/theme"
        android:layout_width="wrap_content" 
        android:gravity="center_vertical"
        android:text="Welcome to Picstorms.com!"
        android:layout_height="match_parent"
        android:textColor="#333333"></TextView>
	
</LinearLayout>